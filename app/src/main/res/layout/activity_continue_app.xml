<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/secondpage"
    tools:context=".ContinueAppActivity">
    <LinearLayout
        android:id="@+id/linearlayoutinfo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="400dp"
        android:background="@color/colorbluetxt"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/txtwelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="        Please Select Following one option

                        for continue to the app   "
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/logincontinue"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_buttonlogin"
            android:text="Login"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/registercontinue"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:text="Register"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>