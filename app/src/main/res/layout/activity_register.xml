<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/registerback"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Create Your Account"
        android:textColor="@color/colorbluetxt"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"
        android:hint="Enter Username"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <EditText
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Email"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <EditText
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:padding="10dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_button"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <EditText
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Phone"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="register"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_loginregbutton"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="By clicking sign up you agree to the our Terms and Condition"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="85dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Already an account ?"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/AHAlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Log In"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:textColor="@color/colorbluetxt"
            android:textStyle="bold" />


    </LinearLayout>



</LinearLayout>
